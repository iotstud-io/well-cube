{
    "name": "well-cube-components",
    "css": [],
    "components": [
        {
            "name": "AirPlus",
            "defaultExport": true,
            "description": "Component to display all the telemetry from a WellCube Air+ device.",
            "capabilities": {
                "tvoc": "optional",
                "pm10": "optional",
                "pm25": "optional",
                "proximity_meters": "optional",
                "life_percent": "optional",
                "noise_db": "optional",
                "cct": "optional",
                "brightness_lux": "optional",
                "humidity": "optional",
                "temp_celcius": "optional",
                "co2": "optional",
                "timemstamp_unix": "optional"
            },
            "settings": [
                {
                    "name": "temperature_format",
                    "label": "Temperature Format",
                    "description": "Choose between Celsius and Fahrenheit.",
                    "default": "f",
                    "options": [
                        { "value": "c", "label": "Celsius" },
                        { "value": "f", "label": "Fahrenheit" }
                    ]
                },
                {
                    "name": "show_chart",
                    "label": "Show Chart",
                    "description": "Toggle to show or hide the Historical Data Chart.",
                    "default": true,
                    "options": [
                        { "value": true, "label": "Show" },
                        { "value": false, "label": "Hide" }
                    ]
                }
            ]
        },
        {
            "name": "RoomReadiness",
            "defaultExport": true,
            "description": "Component to display the readiness of a room based on WellCube sensors.",
            "capabilities": {
                "tvoc": "optional",
                "pm10": "optional",
                "pm25": "optional",
                "brightness_lux": "optional",
                "temp_celcius": "optional",
                "co2": "optional"
            },
            "settings": [
                {
                    "name": "temperature_format",
                    "label": "Temperature Format",
                    "description": "Choose between Celsius and Fahrenheit.",
                    "default": "f",
                    "options": [
                        { "value": "c", "label": "Celsius" },
                        { "value": "f", "label": "Fahrenheit" }
                    ]
                }
            ]
        }
    ]
